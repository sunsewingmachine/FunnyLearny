<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="android:windowLightStatusBar">@bool/invertedBarEnabled</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog_anim</item>
        <item name="android:windowExitAnimation">@anim/slide_down_dialog_anim</item>
    </style>

    <style name="DialogSlideAnim" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="android:background">@color/colorSurface</item>
        <item name="android:windowAnimationStyle">@style/DialogAnimation</item>
    </style>


</resources>